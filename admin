import tkinter as tk
from bot import start_bot, stop_bot
from threading import Thread
from PIL import Image, ImageTk
class BotController:
    def __init__(self, root):
        self.root = root
        self.image = Image.open(r"фурион.jpg")
        self.bg_image = ImageTk.PhotoImage(self.image)
        self.bg_label = tk.Label(root, image=self.bg_image)
        self.bg_label.place(x=0, y=0, relwidth=1, relheight=1)
        self.root.configure(bg='lightgray')
        self.root.title("Управление Telegram-ботом")
        self.label = tk.Label(self.root, text= 'Здесь вы можете управлять ботом')
        self.label.pack(pady=10)
        self.btn1 = tk.Button(self.root, text='Включение бота', command=self.start_bot_wrapper, width=20, height=3, bg= 'green', activebackground='lightgreen')
        self.btn1.pack(pady= 10)

        self.btn2 = tk.Button(self.root, text='Выключение бота', command=stop_bot, width=20, height=3, bg= 'red', activebackground='pink')
        self.btn2.pack(pady= 10)
    def start_bot_wrapper(self):
        self.bot_thread = Thread(target=start_bot)
        self.bot_thread.start()

root = tk.Tk()
app = BotController(root)
root.mainloop()
